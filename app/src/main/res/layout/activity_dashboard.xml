<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eattend.miniproject.eattend.DashboardActivity">

    <Button
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle"
        android:onClick="location"
        android:text="+"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/dashboard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dashboard_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dashboard_name"
        android:layout_below="@+id/dashboard_name"
        android:layout_marginTop="31dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dashboard_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dashboard_email"
        android:layout_below="@+id/dashboard_email"
        android:layout_marginTop="32dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dashboard_eid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dashboard_mob"
        android:layout_below="@+id/dashboard_mob"
        android:layout_marginTop="27dp"
        android:text="TextView" />

</RelativeLayout>
